{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "mingw-debug-static",
            "displayName": "MinGW Debug static",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/mingw-debug-static",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "A:/compilers/mingw64/bin/gcc.exe",
                "CMAKE_CXX_COMPILER": "A:/compilers/mingw64/bin/g++.exe",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/mingw-debug-static"
            }
        },
        {
            "name": "mingw-release-static",
            "displayName": "MinGW Release static",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/mingw-release-static",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "A:/compilers/mingw64/bin/gcc.exe",
                "CMAKE_CXX_COMPILER": "A:/compilers/mingw64/bin/g++.exe",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/mingw-release-static"
            }
        },
        {
            "name": "msvc-debug-static",
            "displayName": "MSVC Debug (Ninja) static",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/msvc-debug-static",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/msvc-debug-static"
            }
        },
        {
            "name": "msvc-release-static",
            "displayName": "MSVC Release (Ninja) static",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/msvc-release-static",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/msvc-release-static"
            }
        }
    ],
    "testPresets": [
        {
            "name": "mingw-debug-static-tests",
            "description": "",
            "displayName": "mingw-debug-static-tests",
            "configurePreset": "mingw-debug-static"
        },
        {
            "name": "mingw-release-static-tests",
            "description": "",
            "displayName": "mingw-release-static-tests",
            "configurePreset": "mingw-release-static"
        }
    ]
}